<h1>{{title}}</h1>
<p>Welcome to the {{title}}</p>

{{# each products }}
  <div class="row">
    <div class="col-md-12">
      <div class="thumbnail">
        <div class="caption">
          <h3>{{ this.title }}</h3>
            <p class="description">{{{this.description}}}</p>
            <div class="clearfix">
              <div class="currency">
                <select name="currency">
                  <option value="RUB" selected>RUB</option>
                  <option value="EUR">EUR</option>
                  <option value="USD">USD</option>
                </select>
              </div>
              <div class="count">
                <input type="number" min="1" size="3" placeholder="количество" value="1" />
              </div>
              
              <div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i> {{ this.price }} RUB</div>
              <a href="#" data-id="{{this.id}}"  class="btn btn-default pull-right" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Add to cart</a>
            </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}